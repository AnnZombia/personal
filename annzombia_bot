import telebot
import os
import datetime
import random
import time

bot = telebot.TeleBot("6678849272:AAFC9Qylyjb7EHgx0hzayS8FFii__C-zUWQ")
bot.send_message(360112051, "Знаю, ты соскучился. Для начала немного пацанских цитат с утра.")
while True:
          now = datetime.datetime.now()
          if now.hour == 17 and now.minute == 51:
              with open ('phrases.txt', 'r') as file:
                  lines = file.readlines()
                  print(random.choice(lines))
                  bot.send_message(360112051, random.choice(lines))
                  time.sleep(60)

@bot.message_handler(commands=['start', 'help'])
def send_welcome(message):
	bot.reply_to(message, "Че надо? Я больше ничего не умею.")

